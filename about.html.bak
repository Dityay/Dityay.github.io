            object-fit: cover;
            border-radius: 24px; /* Kotak dengan sudut melengkung */
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .about-content img:hover {
            transform: scale(1.03);
            box-shadow: 0 16px 32px rgba(191, 214, 62, 0.3); /* Sedikit efek glow hijau lime */
        }

        /* Jarak antar paragraf agar lebih enak dibaca */
        .about-text p {
            margin-bottom: 1.5rem;
            font-size: 1.05rem;
        }

        @media (max-width: 768px) {
            .about-content img {
                width: 200px;
                height: 200px;
                margin-bottom: 2rem;
